@model Login_Role_MVC.Models.AddUserVM
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditUserData</title>
</head>
<body>
    <h1>Edit Here...</h1>
    <div>
        <a href="/User/GetUserData">View users Data</a>
    </div>
    <hr />
    <form method="post">
        <div>
            <table>
                <tr>
                    <td>
                        Name
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Name)
                    </td>
                </tr>
                <tr>
                    <td>
                        UserId
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.UserId)
                    </td>
                </tr>
                <tr>
                    <td>
                        Password
                    </td>
                    <td>
                        @Html.TextBoxFor(m => m.Password)
                    </td>
                </tr>
                <tr>
                    <td>
                        Role
                    </td>
                    <td>
                        @Html.DropDownListFor(m => m.RoleId, Model.RoleLst)
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input type="submit" value="Update Data" />
                        <input type="hidden" name="id" id="id" value="@Model.Id"/>
                    </td>

                </tr>
            </table>
            
        </div>
    </form>
</body>
</html>
