@model Final_Case_Study.Models.DeptLVM
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dashboard</title>
    <style>
        /*table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }*/

        .center {
            margin-left: auto;
            margin-right: auto;
        }
    </style>
</head>
<body>
    <div class="hidden" style="padding:10px">
        <table class="center" style="width:30%;text-align:center;">
            <thead style="background-color: #04AA6D;">
                <tr>
                    <th>
                        Departments
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rec in Model.Dlst)
                {
                    <tr>
                        <td>
                            @rec.DeptName
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>