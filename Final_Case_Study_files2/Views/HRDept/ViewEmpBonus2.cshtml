@model Final_Case_Study.Models.AddBonusVM
@{
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Dashboard</title>
    <style>
        /*table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }*/

        .center {
            /*margin-left: auto;
            margin-right: auto;*/
            margin-top: auto;
            padding-top: 2em;
            padding-bottom: 3em;
        }
        tr .tooltiptext {
            visibility: hidden;
            width: 200px;
            background-color: black;
            color: #fff;
            text-align: center;
            border-radius: 6px;
            padding: 5px 0;
            /* Position the tooltip */
            position: absolute;
            z-index: 1;
        }

        tr:hover .tooltiptext {
            visibility: visible;
        }
    </style>
</head>
<body>
    <div class="hidden" style="padding:10px">
        <table class="center" style="width:100%;text-align:center;">
            <thead style="background-color: #04AA6D;">
                <tr>
                    <th>
                        Bouns ID
                    </th>
                    <th>
                        Employee
                    </th>
                    <th>
                        Bonus Date
                    </th>
                    <th>
                        Bonus Amount
                    </th>
                    <th>
                        Delete
                    </th>
                    <th>
                        Edit
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rec in Model.B2lst)
                {
                <tr>
                    <td>
                        @rec.Bonid
                    </td>
                    <td>
                        @rec.Ename
                    </td>
                    <td>
                        @rec.BonDate
                    </td>
                    <td>
                        @rec.Bonamt
                    </td>
                    <td>
                        <div>
                            <a href="/HRDept/DeleteBon?Bonid=@rec.Bonid" style="text-decoration: none;">Delete</a>
                            
                        </div>
                    </td>
                    <td>
                        <div>
                            <a href="/HRDept/EditBon?Bonid=@rec.Bonid" style="text-decoration: none;">Edit</a>
                            <span class="tooltiptext"> Click to Delete or Edit Record</span>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>